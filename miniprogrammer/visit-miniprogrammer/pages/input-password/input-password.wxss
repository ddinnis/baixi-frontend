.bg-image,
.bg-cover {
	position: fixed;
	top: 0;
	left: 0;
	height: 50%;
	width: 100%;
	z-index: -1;
}

.bg-cover .image {
	width: 200px;
	height: 300px;
}

.top-tabs {
	display: flex;
	font-size: 40rpx;
	color: #fff;
}

.scan-camera {
	width: 400rpx;
	height: 400rpx;
	border-radius: 6rpx;
	margin: 30rpx auto;
  }
.scan .text{
	display: flex;
	justify-content: center;
}
.login-page{
	background-color: #fff;
	z-index: 9;
	width: 100vw;
	height: 80vh;
	position: absolute;
	bottom: 0;
	border-top-left-radius: 13%;
	border-top-right-radius: 13%;
}

.content{
	padding: 13vw 10vw 0;
	justify-content: center;
	align-items: center;
}

.top-title{
	font-size: larger;
	font-weight:600;

	display: flex;
	justify-content: center;

	margin-bottom: 90rpx;
}

.baixi-id,
.student-name
{
	border-bottom: #D3D3D3 solid 2px;
	margin-top: 80rpx;
}
.van-cell__left-icon-wrap{
	padding-right: 20px;
}
.content .text{
	color: #979797;
	font-weight: 400;
	font-size:25rpx;

	display: flex;
	justify-content: center;
	align-items: center;

	margin-top: 70rpx;
}

/* 密码输入框 */
form{
	display: flex;
	justify-content: space-around;
	width:100%;
}
form input{
	height: 94rpx;
	width:94rpx;
	border:1px solid #cdcdcd;
	border-radius: 8rpx;
	display: inline-block;
	line-height: 94px;
	text-align: center;
	font-size: 48rpx;
	color:#323232;
	margin:0 8rpx;
  }
  form .hidden_ipt{
	height: 0rpx;
	width:0rpx;
	border:none;
	margin:0;
  }

  .verificationCode {
	overflow: hidden;
	position: relative;
	width: 100%;
	display: flex;
	justify-content: space-between;
	padding: 50rpx 0 0;
  }
  .verificationCode > input {
	width: calc(200%);
	position: absolute;
	left: -100px;
	top: 20px;
	height: 100px;
	background: #e9e9e9;
	opacity: 0;
	font-size: 10px;
  }
  .verificationCode > view {
	width: 55px;
	border: 1rpx solid #979797;
	height: 60px;
	text-align: center;
	line-height: 60px;
	border-radius: 4px;
	font-size: 30px;
	color: #4DBF6E;
  }
  .verificationCode .activeView {
	border-color: #4DBF6E;
  }
  /* 登录按钮 */

  .btns{
	display: flex;
	margin-top: 20rpx;
  }
  .btn{
	  width: 280rpx;
	  height: 120rpx;
	  background-color: #409eff;
	  color: blanchedalmond;

	  display: flex;
	  justify-content: center;
	  align-items: center;
  }

  /* 密码设置成功 btn */
 .confirm-btn {
	width: 100%;
  }

  .notice{
	  padding: 40rpx 50rpx 0;
	  color: red;
 
	  display: flex;
	  justify-content: center;
	  align-items: center;
	  text-align: center;
	  height: 100%;
  }