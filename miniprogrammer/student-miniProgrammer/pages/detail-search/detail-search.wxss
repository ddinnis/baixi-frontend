/* pages/detail-search/detail-search.wxss */
page {
	--search-background-color: #fff;
	--search-padding: 10px 0;
	padding: 0 24rpx;
	box-sizing: border-box;
	background-color: #fafafa;
}

/* 搜索热榜 */
.hotList .list {
	display: flex;
	flex-wrap: wrap;
}

.hotList .tag {
	height: 45rpx;
	line-height: 45rpx;
	font-size: 26rpx;
	padding: 10rpx 12rpx;
	background-color: #fff;
	border-radius: 20rpx;
	margin: 20rpx 20rpx 0 0;
}

.hotList .tag:first-child {
	color: #26ce2a;
}

/* 搜索关键字 */
.suggest .title {
	color: #26ce2a;
	font-weight: 600;
	margin-bottom: 20rpx;
}

.suggest .icon {
	width: 100rpx;
	height: 100rpx;
}

.suggest .icon {
	width: 80rpx;
	height: 80rpx;
}

.suggest .list {
	display: flex;
	align-items: center;
}

.suggest .list .name {
	flex: 1
}