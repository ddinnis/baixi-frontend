/* pages/notice/notice.wxss */
.top-tabs {
	display: flex;
	font-size: 40rpx;
	color: #fff;
}

/* 背景图 */
.bg-image,
.bg-cover {
	position: fixed;
	top: 0;
	left: 0;
	height: 100%;
	width: 100%;
	z-index: -1;
}

.bg-cover .image {
	width: 200px;
	height: 300px;
}

.page{
	display: flex;
	justify-content: center;

	background-color: #fff;
	z-index: 9;
	width: 85vw;
	height: 65vh;
	margin: 3vh auto;
	border-radius: 2%;
}
.page .content{
	padding: 50rpx;
}

/* overview-item */
.overview-item {
	display: flex;
	padding: 16rpx 0;
	align-items: center;
	width: 100%;
}

.img {
	margin-right: 32rpx;
	width: 120rpx;
	height: 120rpx;
	border-radius: 16rpx;
}
.right-item{
	display: flex;
	border-bottom:  solid 1px #DEDEDE;
	padding-bottom: 20rpx;
}

.info {
	margin-right: 0 32rpx;
	flex: 1;
}

.info .sponsor {
	font-size: 32rpx;
	color: #555;
	display: flex;
}

.info .extra-info {
	margin-top: 16rpx;
	font-size: 24rpx;
	color: #999;
}
.sponsor-status{
	display: flex;
	align-items: center;
	color:green;
	font-size: 24rpx;
	margin: 0 40rpx 0 30rpx ;
}
.arrow{
	display: flex;
	align-items: center;
}

  /* 按钮 */
.btns{
	display: flex;
	margin-top: 80rpx;
	justify-content: space-around;
}
.btn{ 
	letter-spacing: 0.2rem;
	color: white;
	font-size: 40rpx;
	font-weight: 300;

	text-align: center;
	line-height: 45rpx; 
	background-color: transparent;   /*按钮透明*/  
	border:none;				/*设置按钮边框*/

	display: flex;
	align-items: center;
	justify-content: center;

	border-bottom: solid 1px white;

	margin: 40rpx ;
	padding-bottom: 15rpx;
}
.btn::after{
	border:none；
}
