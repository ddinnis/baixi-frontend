/* pages/notice/notice.wxss */
.top-tabs {
	display: flex;
	font-size: 40rpx;
	color: #fff;
}

/* 背景图 */
.bg-image,
.bg-cover {
	position: fixed;
	top: 0;
	left: 0;
	height: 100%;
	width: 100%;
	z-index: -1;
}

.bg-cover .image {
	width: 200px;
	height: 300px;
}

.page{
	display: flex;
	justify-content: center;

	background-color: rgba(225,225,225,0.4);
	z-index: 9;
	width: 85vw;
	height: 35vh;
	margin: 3vh auto;
	margin-top: 10vh;
	border-radius: 2%;
}
.page .title{
	display: flex;
	justify-content: center;
	font-size: 28px;
	font-weight: 700;
	margin-bottom: 60rpx;
}
.page .content{
	color: #1E293B;
	padding: 50rpx;
	overflow: scroll;
}
.page .content .sentence{
	padding-bottom: 40rpx;
	text-indent:2em;
}
.page .content .red{
	color:red;
}

  /* 登录按钮 */
  .confirm-btn{
	margin-top: 250rpx;
	height: 120rpx;
	background-color: #409eff;
	color: blanchedalmond;

	display: flex;
	justify-content: center;
	align-items: center;

	width: 85vw;
}