.page .container{
	width: 100%;
	padding: 40rpx;
}

/* 背景图 */
.bg-image,
.bg-cover {
	position: fixed;
	top: 0;
	left: 0;
	height: 100%;
	width: 100%;
	z-index: -1;
}

.bg-cover .image {
	width: 200px;
	height: 300px;
}

.page{
	display: flex;
	justify-content: center;

	background-color: #fff;
	z-index: 9;
	width: 85vw;
	height: 40vh;
	margin: 3vh auto;
	margin-top: 12vh;
	border-radius: 2%;
}
/* 联系人 */
.contact{
	display: flex;
	justify-content: space-between;
	width: 100%;
	border-bottom: solid 4rpx #f3f3f3;
	margin-bottom: 40rpx;
}
.contact .receiver{
	color:#554f4f;
	margin-bottom: 20rpx;
}
