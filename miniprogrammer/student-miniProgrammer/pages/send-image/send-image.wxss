/* 登录按钮 */
.btn{
	height: 120rpx;
	background-color: #409eff;
	color: blanchedalmond;
	display: flex;
	justify-content: center;
	align-items: center;
	width: 40vw;
	margin: 0;
}

.btns{
	display: flex;
	width: 85vw;
	margin: 3vh auto;
	justify-content: space-between;
}

.return-btn{
	background:#D8D8D8;
}